cxx = c++

cflags = -DTORCH_EXTENSION_NAME=pyhipblas -DTORCH_API_INCLUDE_EXTENSION_H -DPYBIND11_COMPILER_TYPE=\"_gcc\" -DPYBIND11_STDLIB=\"_libstdcpp\" -DPYBIND11_BUILD_ABI=\"_cxxabi1011\" -I/lustre/orion/csc569/scratch/ssingh37/gordon-bell/nccl4py -I/opt/rocm-5.6.0/include -isystem /lustre/orion/csc569/scratch/ssingh37/gordon-bell/gordon-bell-venv/lib/python3.9/site-packages/torch/include -isystem /lustre/orion/csc569/scratch/ssingh37/gordon-bell/gordon-bell-venv/lib/python3.9/site-packages/torch/include/torch/csrc/api/include -isystem /lustre/orion/csc569/scratch/ssingh37/gordon-bell/gordon-bell-venv/lib/python3.9/site-packages/torch/include/TH -isystem /lustre/orion/csc569/scratch/ssingh37/gordon-bell/gordon-bell-venv/lib/python3.9/site-packages/torch/include/THC -isystem /opt/cray/pe/python/3.9.13.1/include/python3.9 -D_GLIBCXX_USE_CXX11_ABI=0 -fPIC -std=c++17 -O3 -std=c++17 -D__HIP_ROCclr__ -D__HIP_ARCH_GFX90A__=1
post_cflags = -fPIC -D__HIP_PLATFORM_HCC__=1 -DUSE_ROCM=1
cuda_dlink_post_cflags = 
ldflags = -shared -lamdhip64 -lrocblas -L/opt/rocm-5.6.0/lib -L/lustre/orion/csc569/scratch/ssingh37/gordon-bell/gordon-bell-venv/lib/python3.9/site-packages/torch/lib -lc10 -ltorch_cpu -ltorch -ltorch_python

rule compile
  command = $cxx -MMD -MF $out.d $cflags -c $in -o $out $post_cflags
  depfile = $out.d
  deps = gcc



rule link
  command = $cxx $in $ldflags -o $out

build pyhipblas.o: compile /lustre/orion/csc569/scratch/ssingh37/gordon-bell/nccl4py/pyhipblas.cpp



build pyhipblas.so: link pyhipblas.o

default pyhipblas.so
